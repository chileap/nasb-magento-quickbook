= title('User Management')

.row.spacing-top
	.fixed-action-btn.horizontal.click-to-toggle.direction-top.direction-left{:style => "bottom: 160px"}
		%a.btn-floating.btn-large.red{ href: new_user_path }
			%i.material-icons add
	.col.m10.col.s12.offset-m1
		%table.bordered.responsive-table
			%thead
				%tr
					%th.center-table No
					%th.center-table Email
					%th.center-table Actions
			%tbody
				- @users.each_with_index do |user, index|
					%tr
						%td.center-table= index+1
						%td.center-table= user.email
						%td.center-table
							.horizontal.click-to-toggle.direction-top.direction-left{:style => "bottom: 160px"}
								%a.btn-floating.btn-small.blue{href: edit_user_path(user), style: "margin-right: 30px"}
									%i.material-icons create
								= link_to(user_path(user), method: :delete, data: { confirm: 'Are you sure you want to remove this user ?'}) do
									.btn-floating.btn-small.red
										%i.material-icons delete
		= paginate @users