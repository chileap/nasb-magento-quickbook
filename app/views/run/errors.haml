= title('Error Report')

.row.spacing-top
  .col.m10.col.s12.offset-m1
    %h3 Error Report

    %table.bordered.responsive-table
      %thead
        %tr
          %th Magento Order ID
          %th Details
          %th Action
      %tbody
        - @error_reports.each do |error_report|
          %tr
            %td= link_to error_report.magento_id, "https://truenorthseedbank.com/index.php/admin/adm45inz3x/sales_order/view/order_id/#{error_report.order_id}/", target: '_blank'
            %td= RunLog.find(error_report.last_runlog_id).message
            %td

    = paginate @error_reports
