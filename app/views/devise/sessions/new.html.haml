= title('Login Page')
.row.spacing-top
  .col.s12.m8.offset-m2
    .card
      .card-title.card-header
        %h3 Login
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .card-content
          .form-inputs
            = f.input :email, required: false, autofocus: true,  wrapper_html: { class: 'input-field' }
            = f.input :password, required: false,  wrapper_html: { class: 'input-field' }
            = f.input :remember_me, as: :boolean, wrapper_html: { class: 'input-field' } if devise_mapping.rememberable?
        .card-action
          = f.button :submit, 'Log in'
          .input-field
            = link_to 'forget password', new_password_path(resource_name)
